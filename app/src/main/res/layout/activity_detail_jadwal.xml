<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DetailJadwalActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/dCardData"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                fancy:cardBackgroundColor="#fff"
                fancy:cardCornerRadius="5dp"
                fancy:cardUseCompatPadding="true"
                fancy:cardElevation="2dp">

                <RelativeLayout android:id="@+id/item_kategori"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/layoutData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_toStartOf="@+id/layoutTanggal"
                        android:orientation="vertical"
                        android:layout_toLeftOf="@+id/layoutTanggal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_location"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Tempat : "
                                android:textColor="@color/colorDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/dTempat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Rumah Ibu Endang"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Alamat : "
                                android:textColor="@color/colorDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/dAlamat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jalan Indonesia Raya"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_timedetail"
                                android:layout_marginEnd="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Jam : "
                                android:textColor="@color/colorDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/dJamMulai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10.00"
                                android:textStyle="bold"
                                android:textSize="12sp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" - "
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/dJamSelesai"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selesai"
                                android:textStyle="bold"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginEnd="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Keterangan: "
                                android:textColor="@color/colorDark"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/dPemateri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"/>
                        </LinearLayout>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layoutTanggal"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorAccent"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:id="@+id/dTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorSalju"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"/>
                        <TextView
                            android:id="@+id/dHari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="@color/colorSalju"
                            android:layout_above="@+id/dTanggal"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:id="@+id/dBulanTahun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dTanggal"
                            android:textSize="11sp"
                            android:layout_marginTop="5dp"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorSalju"/>

                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/dCardData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:background="@color/colorSalju">

                    <TextView
                        android:id="@+id/mapkajian"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textColor="#fff"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:text="@string/peta_kajian"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/lihat"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/mapkajian"
                        android:textColor="#999e9b"
                        android:padding="8dp"
                        android:text="@string/lihat_lokasi_di_google_maps"
                        android:background="#fff"
                        android:visibility="gone"/>

                    <fragment
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map"
                        android:layout_below="@id/lihat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:name="com.google.android.gms.maps.SupportMapFragment" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

        <com.rilixtech.materialfancybutton.MaterialFancyButton
            android:id="@+id/btnHapus"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            fancy:mfb_borderWidth="1dp"
            fancy:mfb_defaultColor="@color/colorDark"
            fancy:mfb_focusColor="@color/colorAccent"
            fancy:mfb_radius="0dp"
            fancy:mfb_text="Hapus Data"
            fancy:mfb_textSize="12sp"
            fancy:mfb_textColor="@color/colorSalju"
            android:layout_weight="1"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pgbar_det_kajian"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>