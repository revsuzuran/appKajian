<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="15dp">

    <TextView
        android:id="@+id/pilihTambahGambar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:textSize="14sp"
        android:textColor="@color/colorSalju"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/pilih_gambar"/>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/layout_bg_round">

        <EditText
            android:id="@+id/postText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:hint="@string/pemberitahuan"
            android:layout_margin="7dp"
            android:textSize="13sp"
            android:gravity="top"
            android:focusableInTouchMode="true"
            tools:ignore="Autofill,TextFields" />

    </LinearLayout>

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:layout_marginTop="15dp"
        android:id="@+id/btn_kirimtambahpost"
        android:layout_width="250dp"
        android:layout_height="50dp"
        fancy:mfb_defaultColor="@color/colorPrimaryDark"
        fancy:mfb_focusColor="#75D81B60"
        fancy:mfb_text="Kirim"
        fancy:mfb_radius="3dp"
        fancy:mfb_textSize="16sp"
        fancy:mfb_textColor="#fff"/>



</LinearLayout>
    <ProgressBar
        android:id="@+id/pgbar_input_post"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>